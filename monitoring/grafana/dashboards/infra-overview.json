{
  "uid": "infra-overview",
  "title": "Infra Overview",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "tags": ["rag", "infra", "prometheus"],
  "time": { "from": "now-1h", "to": "now" },
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "RabbitMQ queue depth (messages)",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        { "refId": "A", "expr": "sum(rabbitmq_queue_messages) by (queue)", "legendFormat": "{{queue}}" }
      ]
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "RabbitMQ consumers (by queue)",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        { "refId": "A", "expr": "sum(rabbitmq_queue_consumers) by (queue)", "legendFormat": "{{queue}}" }
      ]
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Postgres connections",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        { "refId": "A", "expr": "sum(pg_stat_activity_count) by (state)", "legendFormat": "{{state}}" }
      ]
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Postgres transactions/s",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        { "refId": "A", "expr": "sum(rate(pg_stat_database_xact_commit[1m]) + rate(pg_stat_database_xact_rollback[1m])) by (datname)", "legendFormat": "{{datname}}" }
      ]
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "OpenSearch cluster health (0=green,1=yellow,2=red)",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "targets": [
        { "refId": "A", "expr": "elasticsearch_cluster_health_status", "legendFormat": "{{color}}" }
      ]
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Node CPU usage (%)",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "targets": [
        { "refId": "A", "expr": "100 * (1 - avg(rate(node_cpu_seconds_total{mode=\"idle\"}[5m])))", "legendFormat": "cpu" }
      ]
    },
    {
      "id": 7,
      "type": "timeseries",
      "title": "Node memory available (%)",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
      "targets": [
        { "refId": "A", "expr": "100 * (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)", "legendFormat": "mem" }
      ]
    },
    {
      "id": 8,
      "type": "timeseries",
      "title": "Container CPU (cadvisor) by container",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
      "targets": [
        { "refId": "A", "expr": "topk(10, sum(rate(container_cpu_usage_seconds_total{container_label_com_docker_compose_project!=\"\"}[5m])) by (name))", "legendFormat": "{{name}}" }
      ]
    }
  ]
}



